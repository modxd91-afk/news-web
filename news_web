  <script>
    // ---- Simple SPA State ----
    const defaultCategories = [
      { slug: 'general', name: 'ุฃุฎุจุงุฑ ุนุงูุฉ', emoji: '๐ฐ' },
      { slug: 'tech', name: 'ุชูููุฉ', emoji: '๐ป' },
      { slug: 'sports', name: 'ุฑูุงุถุฉ', emoji: '๐๏ธ' },
      { slug: 'games', name: 'ุฃูุนุงุจ', emoji: '๐ฎ' },
      { slug: 'art', name: 'ูู', emoji: '๐จ' },
      { slug: 'economy', name: 'ุงูุชุตุงุฏ', emoji: '๐ฐ' },
      { slug: 'cars', name: 'ุณูุงุฑุงุช', emoji: '๐' },
      { slug: 'education', name: 'ุชุนููู', emoji: '๐' }
    ];

    const storeKey = 'news-portal-v1';

    const initialData = {
      siteName: 'ุจูุงุจุฉ ุงูุฃุฎุจุงุฑ',
      categories: defaultCategories,
      articles: [
        { id: uid(), title: 'ูุฑุญุจูุง ุจู! ูุฐุง ูุซุงู ูุฎุจุฑ', category: 'general', summary: 'ููููู ุชุนุฏูู ูุฐุง ุงูุฎุจุฑ ุฃู ุญุฐููู ุฃู ุฅุถุงูุฉ ุฃุฎุจุงุฑ ุฌุฏูุฏุฉ ูู ุงูุฒุฑ ุจุงูุฃุนูู.', link: '', image: '', date: today() },
      ]
    };

    function load() {
      try {
        const raw = localStorage.getItem(storeKey);
        return raw ? JSON.parse(raw) : initialData;
      } catch (e) { return initialData; }
    }

    function save(data) { localStorage.setItem(storeKey, JSON.stringify(data)); }
    function uid() { return Math.random().toString(36).slice(2) + Date.now().toString(36); }
    function today() { return new Date().toISOString().slice(0,10); }

    let state = load();

    // ---- Elements ----
    const siteNameEl = document.getElementById('siteName');
    const siteNameFooterEl = document.getElementById('siteNameFooter');
    const categoryPills = document.getElementById('categoryPills');
    const contentArea = document.getElementById('contentArea');
    const searchInput = document.getElementById('searchInput');
    const newsModal = document.getElementById('newsModal');
    const modalTitle = document.getElementById('modalTitle');
    const closeModalBtn = document.getElementById('closeModal');
    const inpTitle = document.getElementById('inpTitle');
    const inpCategory = document.getElementById('inpCategory');
    const inpSummary = document.getElementById('inpSummary');
    const inpLink = document.getElementById('inpLink');
    const inpImage = document.getElementById('inpImage');
    const inpDate = document.getElementById('inpDate');
    const saveBtn = document.getElementById('saveBtn');
    const deleteBtn = document.getElementById('deleteBtn');
    const openAddModal = document.getElementById('openAddModal');
    const exportBtn = document.getElementById('exportBtn');
    const editSiteNameBtn = document.getElementById('editSiteName');
    const toast = document.getElementById('toast');

    let editingId = null;

    // ---- Init ----
    function init() {
      document.getElementById('year').textContent = new Date().getFullYear();
      siteNameEl.textContent = state.siteName;
      siteNameFooterEl.textContent = state.siteName;
      renderCategoryPills();
      renderCategorySelect();
      route();
    }

    function renderCategoryPills(activeSlug) {
      categoryPills.innerHTML = '';
      const allBtn = pill('ุงููู', !activeSlug, '#/');
      categoryPills.appendChild(allBtn);
      state.categories.forEach(c => {
        const isActive = activeSlug === c.slug;
        categoryPills.appendChild(pill(`${c.emoji} ${c.name}`, isActive, `#/category/${c.slug}`));
      });
      // Manage hash for deep-links
      categoryPills.querySelectorAll('a').forEach(a => a.addEventListener('click', (e)=>{
        e.preventDefault();
        location.hash = a.getAttribute('href');
      }));
    }

    function pill(label, active, href) {
      const a = document.createElement('a');
      a.href = href;
      a.className = `shrink-0 px-4 py-2 rounded-full border ${active? 'bg-slate-900 text-white border-slate-900' : 'bg-white text-slate-700 border-slate-200 hover:bg-slate-50'}`;
      a.textContent = label;
      return a;
    }

    function renderCategorySelect() {
      inpCategory.innerHTML = '';
      state.categories.forEach(c => {
        const opt = document.createElement('option'); opt.value = c.slug; opt.textContent = c.name; inpCategory.appendChild(opt);
      });
    }

    function card(article) {
      const d = document.createElement('article');
      d.className = 'group rounded-2xl bg-white shadow-sm ring-1 ring-slate-200 overflow-hidden hover:shadow-md transition';

      const img = document.createElement('img');
      img.src = article.image || `https://picsum.photos/seed/${article.id}/800/450`;
      img.alt = article.title; img.className = 'w-full aspect-[16/9] object-cover';
      d.appendChild(img);

      const b = document.createElement('div');
      b.className = 'p-4';

      const cap = state.categories.find(c=>c.slug===article.category);
      const chip = document.createElement('span');
      chip.className = 'inline-flex items-center gap-1 text-xs px-2 py-1 rounded-full bg-slate-100 text-slate-600';
      chip.textContent = cap ? `${cap.emoji} ${cap.name}` : 'ูุณู';
      b.appendChild(chip);

      const h = document.createElement('h3');
      h.className = 'mt-2 font-bold text-lg text-slate-900 line-clamp-2';
      h.textContent = article.title;
      b.appendChild(h);

      if (article.summary) {
        const p = document.createElement('p');
        p.className = 'mt-1 text-slate-600 text-sm line-clamp-3';
        p.textContent = article.summary;
        b.appendChild(p);
      }

      const meta = document.createElement('div');
      meta.className = 'mt-3 text-xs text-slate-500 flex items-center justify-between';
      const dt = new Date(article.date || today());
      meta.innerHTML = `<time datetime="${article.date}">${dt.toLocaleDateString('ar')}</time>`;

      const actions = document.createElement('div');
      actions.className = 'flex items-center gap-2';
      const read = document.createElement('a');
      read.href = `#/p/${article.id}`; read.className = 'px-3 py-1.5 rounded-lg bg-sky-600 text-white hover:bg-sky-700 text-xs'; read.textContent = 'ูุชุญ';
      const share = document.createElement('button');
      share.className = 'px-3 py-1.5 rounded-lg border border-slate-200 hover:bg-slate-50 text-xs'; share.textContent = 'ูุดุงุฑูุฉ';
      share.addEventListener('click', ()=>copyLink(`${location.origin}${location.pathname}#/p/${article.id}`));
      const edit = document.createElement('button');
      edit.className = 'px-3 py-1.5 rounded-lg border border-slate-200 hover:bg-slate-50 text-xs'; edit.textContent = 'ุชุนุฏูู';
      edit.addEventListener('click', ()=>openModal(article.id));
      actions.append(read, share, edit);
      meta.appendChild(actions);
      b.appendChild(meta);

      d.appendChild(b);
      return d;
    }

    function renderList({category, q}={}) {
      contentArea.innerHTML = '';

      const articles = state.articles
        .filter(a => !category || a.category === category)
        .filter(a => !q || a.title.toLowerCase().includes(q.toLowerCase()))
        .sort((a,b)=> new Date(b.date||0) - new Date(a.date||0));

      const grid = document.createElement('div');
      grid.className = 'grid gap-4 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4';

      if (!articles.length) {
        const empty = document.createElement('div');
        empty.className = 'text-center text-slate-500 py-20';
        empty.textContent = 'ูุง ุชูุฌุฏ ุฃุฎุจุงุฑ ุจุนุฏ ูู ูุฐุง ุงููุณู.';
        contentArea.appendChild(empty);
        return;
      }

      articles.forEach(a => grid.appendChild(card(a)));
      contentArea.appendChild(grid);
    }

    function renderArticle(id) {
      const a = state.articles.find(x=>x.id===id);
      if (!a) { contentArea.innerHTML = '<div class="py-16 text-center">ุงูุฎุจุฑ ุบูุฑ ููุฌูุฏ.</div>'; return; }

      const cap = state.categories.find(c=>c.slug===a.category);
      contentArea.innerHTML = `
        <div class="max-w-3xl mx-auto">
          <div class="mb-4 flex items-center justify-between">
            <div class="flex items-center gap-2 text-sm text-slate-600">
              <a class="hover:text-slate-900" href="#/">ุงูุฑุฆูุณูุฉ</a>
              <span class="text-slate-400">/</span>
              <a class="hover:text-slate-900" href="#/category/${a.category}">${cap?cap.name:'ูุณู'}</a>
            </div>
            <div class="flex items-center gap-2">
              <button class="px-3 py-1.5 rounded-lg border border-slate-200 hover:bg-slate-50 text-xs" onclick="copyLink(window.location.href)">ูุณุฎ ุงูุฑุงุจุท</button>
              <button class="px-3 py-1.5 rounded-lg border border-slate-200 hover:bg-slate-50 text-xs" onclick="openModal('${a.id}')">ุชุนุฏูู</button>
            </div>
          </div>
          <h1 class="text-2xl md:text-3xl font-extrabold text-slate-900">${a.title}</h1>
          <div class="mt-2 text-sm text-slate-500">${new Date(a.date||today()).toLocaleDateString('ar')}</div>
          <img class="mt-4 w-full rounded-2xl shadow-sm" src="${a.image||`https://picsum.photos/seed/${a.id}/1200/630`}" alt="${a.title}">
          ${a.summary ? `<p class="mt-4 text-slate-700 leading-8">${a.summary.replaceAll('\n','<br>')}</p>` : ''}
          ${a.link ? `<a class="mt-6 inline-flex items-center gap-2 px-4 py-2 rounded-xl bg-sky-600 text-white hover:bg-sky-700" href="${a.link}" target="_blank" rel="noopener">ูุฑุงุกุฉ ุงููุตุฏุฑ</a>` : ''}
        </div>
      `;
    }

    function renderStatic(page) {
      if (page==='about') {
        contentArea.innerHTML = `
          <div class="max-w-2xl mx-auto py-10">
            <h2 class="text-2xl font-bold">ุนู ุงููููุน</h2>
            <p class="mt-3 text-slate-600">ูููุน ุฃุฎุจุงุฑ ุจุณูุท ูุงุจู ููุชุนุฏูู ุจุฏูู ููุญุฉ ุชุญูู ูุนูุฏุฉ. ุฃุถู ุงูุฃูุณุงู ูุงูุฃุฎุจุงุฑ ูุญูููุง ูุดุงุฑู ุงูุฑูุงุจุท ููุฑูุง. ูููุดุฑ ุงูุนุงู ุงุณุชุฎุฏู GitHub Pages ุฃู Netlify.</p>
          </div>`;
      } else if (page==='help') {
        contentArea.innerHTML = `
          <div class="max-w-2xl mx-auto py-10">
            <h2 class="text-2xl font-bold">ูุณุงุนุฏุฉ ุณุฑูุนุฉ</h2>
            <ol class="mt-3 list-decimal pr-6 text-slate-700 space-y-1">
              <li>ูุฅุถุงูุฉ ุฎุจุฑ: ุงุถุบุท "ุฃุถู ุฎุจุฑูุง"ุ ุงูุชุจ ุงูุนููุงู ูุงุฎุชุฑ ุงููุณู ุซู ุญูุธ.</li>
              <li>ูุชุญุฑูุฑ ุงุณู ุงููููุน: ุฒุฑ "ุชุนุฏูู ุงูุงุณู" ุฃุนูู ุงููุณุงุฑ (ุนูู ุงูุดุงุดุงุช ุงููุงุณุนุฉ).</li>
              <li>ูุชุบููุฑ ุงูุฃูุณุงู: ุงูุชุญ ุฃุฏูุงุช ุงููุทููุฑ ูุญุฑุฑ ูุตูููุฉ ุงูุฃูุณุงู ูู ุงูููุฏ ุฃู ุงุณุชูุฑุฏ ููู ุจูุงูุงุช ูุนุฏู.</li>
              <li>ูููุดุฑ ุนูู ุงูููุจ: ุงุฑูุน ุงูููู <code>index.html</code> ุฅูู GitHub Pages ุฃู Netlify.</li>
            </ol>
          </div>`;
      }
    }

    // ---- Router ----
    window.addEventListener('hashchange', route);
    function route() {
      const hash = location.hash.slice(2); // remove #/
      if (!hash) { renderCategoryPills(); renderList({ q: searchInput.value.trim() }); return; }
      const [kind, param] = hash.split('/');
      if (kind==='category') { renderCategoryPills(param); renderList({ category: param, q: searchInput.value.trim() }); return; }
      if (kind==='p') { renderCategoryPills(); renderArticle(param); return; }
      if (kind==='about' || kind==='help') { renderCategoryPills(); renderStatic(kind); return; }
      renderList({ q: searchInput.value.trim() });
    }

    // ---- Modal (Add/Edit) ----
    function openModal(id=null) {
      editingId = id;
      if (id) {
        const a = state.articles.find(x=>x.id===id);
        modalTitle.textContent = 'ุชุนุฏูู ุงูุฎุจุฑ';
        deleteBtn.classList.remove('hidden');
        inpTitle.value = a.title || '';
        inpCategory.value = a.category || state.categories[0].slug;
        inpSummary.value = a.summary || '';
        inpLink.value = a.link || '';
        inpImage.value = a.image || '';
        inpDate.value = a.date || today();
      } else {
        modalTitle.textContent = 'ุฃุถู ุฎุจุฑูุง';
        deleteBtn.classList.add('hidden');
        inpTitle.value = '';
        inpCategory.value = state.categories[0].slug;
        inpSummary.value = '';
        inpLink.value = '';
        inpImage.value = '';
        inpDate.value = today();
      }
      newsModal.showModal();
    }

    function closeModal() { newsModal.close(); }

    saveBtn.addEventListener('click', (e)=>{
      e.preventDefault();
      const data = {
        id: editingId || uid(),
        title: inpTitle.value.trim(),
        category: inpCategory.value,
        summary: inpSummary.value.trim(),
        link: inpLink.value.trim(),
        image: inpImage.value.trim(),
        date: inpDate.value || today(),
      };
      if (!data.title) return;

      const existing = state.articles.find(a=>a.id===data.id);
      if (existing) Object.assign(existing, data); else state.articles.push(data);
      save(state);
      closeModal();
      route();
    });

    deleteBtn.addEventListener('click', ()=>{
      if (!editingId) return;
      state.articles = state.articles.filter(a=>a.id!==editingId);
      save(state);
      closeModal();
      route();
    });

    closeModalBtn.addEventListener('click', (e)=>{ e.preventDefault(); closeModal(); });
    openAddModal.addEventListener('click', ()=>openModal());

    // ---- Search ----
    searchInput.addEventListener('input', ()=>route());

    // ---- Export / Import ----
    exportBtn.addEventListener('click', (e)=>{
      e.preventDefault();
      const blob = new Blob([JSON.stringify(state, null, 2)], {type:'application/json'});
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url; a.download = 'news-data.json'; a.click();
      URL.revokeObjectURL(url);
    });

    // Drag & drop JSON to import
    window.addEventListener('dragover', (e)=>{ e.preventDefault(); });
    window.addEventListener('drop', (e)=>{
      e.preventDefault();
      const f = e.dataTransfer.files?.[0];
      if (!f) return;
      const reader = new FileReader();
      reader.onload = ()=>{
        try {
          const next = JSON.parse(reader.result);
          if (next && next.articles && next.categories) {
            state = next; save(state); init(); route(); notify('ุชู ุงูุงุณุชูุฑุงุฏ');
          } else { alert('ููู ุบูุฑ ุตุญูุญ'); }
        } catch { alert('ุชุนุฐุฑ ูุฑุงุกุฉ ุงูููู'); }
      };
      reader.readAsText(f);
    });

    // ---- Site Name edit ----
    editSiteNameBtn.addEventListener('click', ()=>{
      const name = prompt('ุงุณู ุงููููุน:', state.siteName);
      if (name && name.trim()) {
        state.siteName = name.trim(); save(state); siteNameEl.textContent = state.siteName; siteNameFooterEl.textContent = state.siteName;
      }
    });

    // ---- Utils ----
    function copyLink(text) {
      navigator.clipboard.writeText(text).then(()=>notify('ุชู ูุณุฎ ุงูุฑุงุจุท'));
    }
    function notify(msg) {
      toast.querySelector('div').textContent = msg;
      toast.classList.remove('hidden');
      setTimeout(()=>toast.classList.add('hidden'), 1200);
    }

    init();
  </script>
</body>
</html>
